<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryAlpha50</item>
    </style>
    
    
    <style name="InbloLoginHeader">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="InbloLoginCaption">
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_std</item>
        <item name="android:textColor">@color/colorCaption</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InbloTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/color_states_outlined_text_box</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="hintTextColor">@color/color_states_hint_edit_text</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>

    <style name="InbloTextInputEditText">
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_std</item>
        <item name="android:textSize">14sp</item>
        <item name="singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="InbloTextInputLayoutAutocomplete" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/color_states_outlined_text_box</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="hintTextColor">@color/color_states_hint_edit_text</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>






    <style name="InbloButtonMain" parent="TextAppearance.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ButtonMainAppearance</item>
        <item name="strokeWidth">0.8dp</item>
        <item name="strokeColor">#328ED1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_std</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">#2B57EA</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
    </style>

    <style name="InbloButtonMainShadow">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/shape_button_main</item>
        <item name="android:translationY">-16dp</item>
    </style>

    <style name="InbloButtonMedium" parent="InbloButtonMain">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="InbloButtonMediumShadow" parent="InbloButtonMainShadow">
        <item name="android:background">@drawable/shape_button_medium</item>
    </style>

    <style name="ButtonMainAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">28dp</item>
        <item name="cornerSizeBottomLeft">28dp</item>
        <item name="cornerSizeTopRight">28dp</item>
        <item name="cornerSizeBottomRight">28dp</item>
    </style>

    <style name="InbloRadioButton">
        <item name="android:minWidth">190dp</item>
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textSize">16sp</item>
        <item name="buttonTint">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_std</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="BottomNavigationItemsTextAppearance">
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_std</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--        <item name="chipBackgroundColor">@color/chip_state_maintenance</item>-->
<!--        <item name="chipStrokeColor">@color/color_blue_300</item>-->
    <style name="InbloOutlinedChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">23dp</item>
        <item name="chipMinHeight">23dp</item>
            <item name="chipStartPadding">8dp</item>
            <item name="chipEndPadding">8dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="android:textAppearance">@style/InbloTextChip</item>
<!--        <item name="android:textColor">@color/chip_state_maintenance_text</item>-->
    </style>


    <style name="InbloTextChip">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_std</item>
    </style>

    <style name="InbloTextChipGreen" parent="InbloOutlinedChip">
        <item name="chipStrokeColor">@color/colorChipDarkGreen</item>
        <item name="chipBackgroundColor">@color/colorChipLightGreen</item>
    </style>

    <style name="InbloTextChipYellow" parent="InbloOutlinedChip">
        <item name="chipStrokeColor">@color/colorDarkYellow</item>
        <item name="chipBackgroundColor">@color/colorLightYellow</item>
    </style>

    <style name="InbloTextChipRed" parent="InbloOutlinedChip">
        <item name="chipStrokeColor">@color/colorEventTypeDarker_2</item>
        <item name="chipBackgroundColor">@color/colorEventTypeLight_2</item>
    </style>

    <style name="InbloTextChipBlue" parent="InbloOutlinedChip">
        <item name="chipStrokeColor">@color/colorEventTypeDarker_4</item>
        <item name="chipBackgroundColor">@color/colorEventTypeLight_4</item>
    </style>

    <style name="InbloFilledChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">23dp</item>
        <item name="chipMinHeight">23dp</item>
        <item name="chipStartPadding">6dp</item>
        <item name="chipEndPadding">6dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="android:textAppearance">@style/InbloTextFilledChip</item>
        <item name="chipIcon">@drawable/ic_flag</item>
        <item name="chipIconTint">@android:color/white</item>
        <item name="chipIconVisible">true</item>
        <item name="iconStartPadding">10dp</item>
        <item name="chipIconSize">17dp</item>
        <!--        <item name="android:textColor">@color/chip_state_maintenance_text</item>-->
    </style>

    <style name="InbloTextFilledChipGreen" parent="InbloFilledChip">
        <item name="chipBackgroundColor">#1EAC2F</item>
    </style>

    <style name="InbloTextFilledChipGray" parent="InbloFilledChip">
        <item name="chipBackgroundColor">#707070</item>
    </style>

    <style name="InbloTextFilledChip">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="InbloButtonOutlined" style="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_std</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="InbloOutlinedShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">7dp</item>
    </style>


    <style name="InbloUnitLabel">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/hiragino_kaku_gothic_std</item>
        <item name="android:textColor">#949DAF</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="InbloUnitValue" parent="InbloUnitLabel">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="InbloTabButton">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:background">@drawable/shape_rounded_corners_17dp</item>
    <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">32dp</item>
        <item name="rippleColor">@color/colorHighlight</item>
    </style>

    <style name="InbloTableColumnLabel">
        <item name="font">@font/hiragino_kaku_gothic_std</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="InbloTableValues">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#322C2C</item>
    </style>

    <style name="InbloButtonTextView" parent="InbloTableColumnLabel">
        <item name="android:background">@android:color/transparent</item>
        <item name="iconPadding">2dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="iconGravity">textEnd</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MySpinnerDatePickerStyle" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:datePickerStyle">@style/MySpinnerDatePicker</item>
    </style>

    <style name="MySpinnerDatePicker" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>


    <style name="InbloCalendarEventText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginBottom">0.5dp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>




    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@color/colorPrimaryDark</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonDelete</item>
    </style>

    <style name="NegativeButtonDelete" parent="Widget.App.Button">
        <item name="android:textColor">#C70000</item>
    </style>


    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
<!--        <item name="materialThemeOverlay">@style/InbloButtonMain</item>-->
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">2dp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="InbloLoadingIndicator">
        <item name="trackColor">@android:color/transparent</item>
        <item name="indicatorColor">@color/colorPrimaryDark</item>
        <item name="android:visibility">invisible</item>
        <item name="android:indeterminate">true</item>
        <item name="android:elevation">999dp</item>
    </style>
</resources>