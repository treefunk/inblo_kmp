<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_message"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginBottom="0.3dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@android:color/white"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="spacer_first,btn_edit,spacer_button,btn_trash,tv_date,tv_time,tv_from,tv_to,tv_title,tv_type,tv_horse_name,tv_notes"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:flow_wrapMode="aligned"
        app:flow_firstHorizontalBias="0"
        app:flow_horizontalStyle="spread_inside"
        android:orientation="horizontal"
        />

    <View
        android:id="@+id/spacer_first"
        android:layout_width="10dp"
        android:layout_height="0dp"
        />
    <ImageButton
        android:id="@+id/btn_edit"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_edit_pencil"
        android:background="?selectableItemBackgroundBorderless"
        android:elevation="14dp"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        />

    <View
        android:id="@+id/spacer_button"
        android:layout_width="10dp"
        android:layout_height="0dp"

        />


    <ImageButton
        android:id="@+id/btn_trash"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_trashcan"
        android:background="?selectableItemBackgroundBorderless"
        android:elevation="14dp"
        android:scaleType="fitCenter"
        app:tint="#c70000"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        style="@style/InbloTableValues"
        android:text="2021-05-02"
        android:gravity="center|top"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        style="@style/InbloTableValues"
        android:text="12:00am"
        android:gravity="center|top"
        />

    <TextView
        android:id="@+id/tv_from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        style="@style/InbloTableValues"
        android:text="コリン厩務員"
        android:gravity="center|top"
        />

    <TextView
        android:id="@+id/tv_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        style="@style/InbloTableValues"
        android:text="全員"
        android:gravity="center|top"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        style="@style/InbloTableValues"
        android:text="全休日"
        android:gravity="center|top"
        />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        style="@style/InbloTableValues"
        android:text="その他"
        android:gravity="center|top"
        />



    <TextView
        android:id="@+id/tv_horse_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        style="@style/InbloTableValues"
        android:text="コリンチャン"
        android:gravity="center|top"
        />

    <TextView
        android:id="@+id/tv_notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth="150dp"

        style="@style/InbloTableValues"
        android:text="なし"

        android:lines="4"
        android:ellipsize="end"
        android:gravity="center|top"

        />



</androidx.constraintlayout.widget.ConstraintLayout>