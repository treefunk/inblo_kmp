<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:background="@color/colorPrimaryDark">

        <View
            android:id="@+id/back_white_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/label_title"
            app:layout_constraintBottom_toBottomOf="@id/below_button_spacer"
            app:layout_constraintLeft_toLeftOf="@id/label_title"
            app:layout_constraintRight_toRightOf="@id/label_title"
            android:background="@drawable/shape_rounded_corners_10dp"
            android:backgroundTint="@android:color/white"
            />

        <TextView
            android:id="@+id/label_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="管理馬の詳細"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toTopOf="@id/flow_form"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:paddingTop="26dp"
            android:paddingBottom="14dp"
            />

        <ImageButton
            android:id="@+id/ib_close_dialog"

            android:layout_width="35dp"
            android:layout_height="35dp"

            app:layout_constraintTop_toTopOf="@id/back_white_bg"
            app:layout_constraintRight_toRightOf="@id/back_white_bg"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_close"
            android:background="?selectableItemBackgroundBorderless"
            />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_form"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/label_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/label_title"
            app:layout_constraintRight_toRightOf="@id/label_title"
            app:constraint_referenced_ids="label_horse_name,tv_horse_name,label_person_in_charge,tv_person_in_charge,label_sexual_age,tv_sexual_age,label_father,tv_father,label_mother,tv_mother,label_mofa,tv_mofa,label_class,tv_class"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:flow_verticalGap="12dp"
            app:flow_horizontalGap="8dp"
            app:flow_maxElementsWrap="2"
            app:flow_wrapMode="aligned"
            android:layout_marginTop="24dp"
            />



        <TextView
            android:id="@+id/label_horse_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="馬名:"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"

            />

        <TextView
            android:id="@+id/tv_horse_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            tools:text="馬名"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/label_person_in_charge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="担当者:"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"

            />

        <TextView
            android:id="@+id/tv_person_in_charge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            tools:text="馬名"
            android:textSize="15sp"
            android:gravity="center"

            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/label_sexual_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="性齢:"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"

            />

        <TextView
            android:id="@+id/tv_sexual_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            tools:text="馬名"
            android:textSize="15sp"
            android:gravity="center"

            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/label_father"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="父:"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"

            />

        <TextView
            android:id="@+id/tv_father"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            tools:text="馬名"
            android:textSize="15sp"
            android:gravity="center"

            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/label_mother"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="母:"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"

            />

        <TextView
            android:id="@+id/tv_mother"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            tools:text="馬名"
            android:textSize="15sp"
            android:gravity="center"

            android:textColor="@color/colorPrimary"
            />



        <TextView
            android:id="@+id/label_mofa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="母父:"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"

            />

        <TextView
            android:id="@+id/tv_mofa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            tools:text="馬名"
            android:textSize="15sp"
            android:gravity="center"

            android:textColor="@color/colorPrimary"
            />

        <TextView
            android:id="@+id/label_class"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="クラス:"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"

            />

        <TextView
            android:id="@+id/tv_class"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            tools:text="馬名"
            android:gravity="center"

            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            />




        <View
            android:id="@+id/below_button_spacer"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/flow_form"
            app:layout_constraintLeft_toLeftOf="@id/label_title"
            app:layout_constraintRight_toRightOf="@id/label_title"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
